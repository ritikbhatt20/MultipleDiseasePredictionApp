<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262730"
    tools:context=".ChooseDiseaseActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#0E1117">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:src="@drawable/notes_icon"

            android:layout_gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiple Disease"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="90dp"
            android:textColor="#AEB4A1"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/archivo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediction System"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="80dp"
            android:textColor="#57A565"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/archivo"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/diabetesBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Diabetes Prediction"
            android:textSize="22dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/baseline_monitor_heart_24"
            android:backgroundTint="#FF4B4B"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/heartBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Heart Disease Pred."
            android:textSize="22dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/baseline_heart_broken_24"
            app:iconGravity="start"
            android:backgroundTint="#FF4B4B"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/parkinsonBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Parkinson's Prediction"
            android:textSize="22dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/baseline_person_outline_24"
            app:iconGravity="start"
            android:backgroundTint="#FF4B4B"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="25dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>